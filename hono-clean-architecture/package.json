{
  "name": "skillsync-hono",
  "version": "1.0.0",
  "description": "SkillSync API - Hono Clean Architecture",
  "type": "module",
  "scripts": {
    "dev": "tsx watch cmd/server/main.ts",
    "start": "node dist/cmd/server/main.js",
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.18.3",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.14",
    "ioredis": "^5.4.2",
    "jose": "^5.9.6",
    "pg": "^8.13.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.5",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.1",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
