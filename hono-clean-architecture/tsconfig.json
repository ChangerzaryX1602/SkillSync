{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "bun"],
    "paths": {
      "@/*": ["./*"],
      "@pkg/*": ["./pkg/*"],
      "@internal/*": ["./internal/*"]
    },
    "baseUrl": "."
  },
  "include": ["*.ts", "cmd/**/*.ts", "pkg/**/*.ts", "internal/**/*.ts", "configs/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
